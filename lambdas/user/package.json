{
  "name": "user-lambda",
  "version": "0.1.0",
  "description": "This lambda is responsible for interacting with the UI and the user entity in the DB",
  "scripts": {
    "lint": "eslint \"**/*.ts\"",
    "test": "ava",
    "coverage": "nyc --reporter=text --reporter=text-summary ava",
    "invoke": "serverless invoke local --function login --path fixtures/loginPayload.json",
    "build": "serverless package",
    "deploy": "serverless deploy"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.73",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "ava": "^3.15.0",
    "aws-sdk": "^2.876.0",
    "aws-sdk-mock": "^5.1.0",
    "eslint": "^7.23.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "nyc": "^15.1.0",
    "serverless": "^2.31.0",
    "serverless-bundle": "^4.2.2",
    "typescript": "^4.2.3"
  },
  "ava": {
    "verbose": true,
    "files": [
      "**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
